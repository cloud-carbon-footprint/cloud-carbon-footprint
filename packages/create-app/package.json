{
  "name": "@cloud-carbon-footprint/create-app",
  "version": "0.4.0",
  "license": "Apache-2.0",
  "description": "Create app package for Cloud Carbon Footprint",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "ccf-create-app": "bin/ccf-create-app"
  },
  "homepage": "https://www.cloudcarbonfootprint.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloud-carbon-footprint/cloud-carbon-footprint",
    "directory": "packages/create-app"
  },
  "keywords": [
    "thoughtworks",
    "cloud",
    "sustainability",
    "climate",
    "carbon-emissions",
    "carbon-footprint"
  ],
  "scripts": {
    "precommit": "lint-staged --no-stash",
    "build": "rimraf dist && yarn build:tsc",
    "build:tsc": "tsc --build tsconfig.json",
    "lint": "eslint '*/**/*.ts' --quiet",
    "clean": "rm -rf coverage src/**/*.js src/**/*.map",
    "start": "nodemon --"
  },
  "nodemonConfig": {
    "watch": "./src",
    "exec": "bin/ccf-create-app",
    "ext": "ts"
  },
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "dependencies": {
    "commander": "^7.2.0",
    "fs-extra": "^10.0.0",
    "handlebars": "^4.7.7",
    "inquirer": "^8.0.0",
    "lint-staged": "^11.0.0",
    "ora": "^5.4.0",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^3.0.2",
    "typed-prompts": "^1.5.0",
    "typescript": "4.2.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/inquirer": "^7.3.1",
    "@types/recursive-readdir": "^2.2.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "ts-node": "^9.1.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint",
      "prettier --write --ignore-unknown --config ../../.prettierrc.json"
    ],
    "*.{md}": [
      "prettier --write --ignore-unknown --config ../../.prettierrc.json"
    ]
  }
}
