{
  "name": "@cloud-carbon-footprint/create-app-test",
  "version": "0.2.1",
  "description": "Create app package for Cloud Carbon Footprint",
  "main": "dist/index.js",
  "bin": {
    "ccf-create-app": "bin/ccf-create-app"
  },
  "scripts": {
    "build": "rimraf dist && yarn build:tsc",
    "build:tsc": "tsc --build tsconfig.json",
    "lint": "eslint '*/**/*.ts' --quiet",
    "clean": "rm -rf coverage src/**/*.js src/**/*.map",
    "start": "nodemon --"
  },
  "nodemonConfig": {
    "watch": "./src",
    "exec": "bin/ccf-create-app",
    "ext": "ts"
  },
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "dependencies": {
    "commander": "^7.2.0",
    "fs-extra": "^9.1.0",
    "handlebars": "^4.7.7",
    "inquirer": "^8.0.0",
    "ora": "^5.4.0",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^3.0.2",
    "typed-prompts": "^1.5.0",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.9",
    "@types/recursive-readdir": "^2.2.0",
    "ts-node": "^9.1.1"
  }
}
