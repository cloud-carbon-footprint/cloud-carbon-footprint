{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es2015", "es2019.array"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@application/*": ["../core/src/application/*"],
      "@domain/*": ["../core/src/domain/*"],
      "@services/*": ["../core/src/services/*"],
      "@view/*": ["./src/view/*"],
      "@fixtures": ["./test/fixtures/fixtures.ts"],
    },
    "experimentalDecorators": true,
    "target": "ES5",
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "scripts"]
}
