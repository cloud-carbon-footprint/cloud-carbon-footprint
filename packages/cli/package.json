{
  "name": "@cloud-carbon-footprint/cli",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "precommit": "lint-staged && yarn test:precommit",
    "test": "jest --coverage --maxWorkers 2",
    "sonar:scan": "sonar-scanner",
    "test:watch": "jest --coverage --watchAll",
    "test:clean": "jest --clearCache",
    "test:precommit": "yarn test:clean && yarn test --bail",
    "build": "rimraf dist && yarn build:tsc && yarn build:copy",
    "build:copy": "cp package.json dist",
    "build:tsc": "tsc --build tsconfig.json",
    "build:watch": "onchange 'src/**/*.ts' -- yarn build",
    "view:coverage": "serve coverage/lcov-report",
    "clean": "rm -rf coverage src/**/*.js src/**/*.map",
    "lint": "eslint '*/**/*.ts' --quiet",
    "lint:fix": "eslint '*/**/*.ts' --quiet --fix",
    "start": "ts-node -r tsconfig-paths/register src/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/jest-when": "^2.7.2",
    "@types/node": "^14.14.30",
    "@types/source-map-support": "^0.5.3",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "aws-sdk-mock": "^5.1.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-unused-imports": "^1.1.0",
    "jest-when": "^3.2.0",
    "lint-staged": "^10.5.4",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "4.1.5"
  },
  "dependencies": {
    "@cloud-carbon-footprint/core": "^1.0.0",
    "@types/cli-table": "^0.3.0",
    "@types/prompts": "^2.0.9",
    "@types/ramda": "^0.27.38",
    "aws-sdk": "^2.847.0",
    "cli-table": "^0.3.5",
    "commander": "^7.1.0",
    "dotenv": "^8.2.0",
    "moment": "^2.29.1",
    "ramda": "^0.27.1",
    "tsconfig-paths": "^3.9.0",
    "typed-prompts": "^1.5.0"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "yarn lint",
      "prettier --write --ignore-unknown --config ../.prettierrc.json"
    ]
  }
}
