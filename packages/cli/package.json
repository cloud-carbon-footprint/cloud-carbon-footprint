{
  "name": "@cloud-carbon-footprint/cli",
  "version": "1.1.0",
  "license": "Apache-2.0",
  "description": "Command Line Interface as an entrypoint to get cloud energy and carbon emissions.",
  "main": "src/index.ts",
  "publishConfig": {
    "main": "dist/index.js"
  },
  "homepage": "https://www.cloudcarbonfootprint.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloud-carbon-footprint/cloud-carbon-footprint",
    "directory": "packages/cli"
  },
  "keywords": [
    "thoughtworks",
    "cloud",
    "sustainability",
    "climate",
    "carbon-emissions",
    "carbon-footprint"
  ],
  "scripts": {
    "precommit": "lint-staged --no-stash && yarn test --coverage --runInBand --bail",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "sonar:scan": "sonar-scanner",
    "test:watch": "yarn test --coverage --watchAll",
    "build": "rimraf dist && yarn build:tsc",
    "build:tsc": "tsc --build tsconfig.json",
    "prepack": "ts-node ../../scripts/prepack.ts",
    "postpack": "ts-node ../../scripts/postpack.ts",
    "build:watch": "onchange 'src/**/*.ts' -- yarn build",
    "view:coverage": "serve coverage/lcov-report",
    "clean": "rimraf dist && rimraf coverage && rimraf logs",
    "lint": "eslint '*/**/*.ts' --quiet",
    "lint:fix": "eslint '*/**/*.ts' --quiet --fix",
    "start": "ts-node src/index.ts",
    "guided-install": "ts-node src/GuidedInstall/index.ts",
    "create-lookup-table": "ts-node src/CreateLookupTable/index.ts"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/jest-when": "^2.7.2",
    "@types/node": "^16.0.1",
    "@types/source-map-support": "^0.5.3",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "aws-sdk-mock": "^5.1.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "jest": "27.2.5",
    "jest-when": "^3.3.1",
    "lint-staged": "^11.0.1",
    "onchange": "^7.1.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@cloud-carbon-footprint/app": "0.3.0",
    "@cloud-carbon-footprint/common": "^1.2.0",
    "@types/cli-table": "^0.3.0",
    "@types/prompts": "^2.0.12",
    "@types/ramda": "^0.27.40",
    "aws-sdk": "^2.910.0",
    "cli-table": "^0.3.6",
    "commander": "^8.0.0",
    "csv-writer": "^1.6.0",
    "csvtojson": "^2.0.10",
    "dotenv": "^10.0.0",
    "fs-extra": "^10.0.0",
    "moment": "^2.29.1",
    "ramda": "^0.27.1",
    "typed-prompts": "^1.5.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint",
      "prettier --write --ignore-unknown --config ../../.prettierrc.json"
    ],
    "*.{md}": [
      "prettier --write --ignore-unknown --config ../../.prettierrc.json"
    ]
  }
}
