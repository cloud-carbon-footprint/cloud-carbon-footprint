{
  "name": "cloud-carbon-footprint",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --maxWorkers 2",
    "test:watch": "jest --coverage --watchAll",
    "test:clean": "jest --clearCache",
    "build": "tsc",
    "build:watch": "onchange 'src/**/*.ts' -- npm run build",
    "view:coverage": "serve coverage/lcov-report",
    "clean": "rm -rf coverage src/**/*.js src/**/*.map",
    "lint": "eslint '*/**/*.ts' --quiet",
    "lint:fix": "eslint '*/**/*.ts' --quiet --fix",
    "start:web": "ts-node-dev -r tsconfig-paths/register src/view/api.ts",
    "start:cli": "ts-node -r tsconfig-paths/register src/index.ts",
    "docker:start": "docker run --name ccf_base -dt --rm -v $(pwd):/cloud-carbon-footprint/server -v $HOME/.aws/credentials:/home/circleci/.aws/credentials -e AWS_PROFILE circleci/node:current bash",
    "docker:setup": "docker exec -w /cloud-carbon-footprint/server -it ccf_base npm install",
    "docker:test": "docker exec -w /cloud-carbon-footprint/server -it ccf_base npm run test",
    "docker:cli": "docker exec -w /cloud-carbon-footprint/server -e AWS_PROFILE -it ccf_base npm run start:cli -- ",
    "docker:stop": "docker stop ccf_base"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/jest-when": "^2.7.1",
    "@types/node": "^14.0.19",
    "@types/source-map-support": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "aws-sdk-mock": "^5.1.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-unused-imports": "^0.1.3",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-when": "^2.7.2",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "serve": "^11.3.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.55",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@types/cli-table": "^0.3.0",
    "@types/express": "^4.17.7",
    "@types/prompts": "^2.0.8",
    "@types/ramda": "github:types/npm-ramda#dist",
    "aws-sdk": "^2.712.0",
    "cli-table": "^0.3.1",
    "commander": "^5.1.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "moment": "^2.27.0",
    "ramda": "^0.27.1",
    "typed-prompts": "^1.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cd .. && ./scripts/lint.bash && cd server && npm run test:clean &&  npm run test"
    }
  }
}
