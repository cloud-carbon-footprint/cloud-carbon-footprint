{
  "name": "cloud-carbon-footprint",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged --debug && npx hawkeye scan && npm run test:precommit",
    "test": "jest --coverage --maxWorkers 2",
    "test:watch": "jest --coverage --watchAll",
    "test:clean": "jest --clearCache",
    "test:precommit": "npm run test:clean && npm test -- --bail",
    "build": "rimraf dist && npm run build:tsc && npm run build:copy",
    "build:copy": "cp package.json dist && cp package-lock.json dist",
    "build:tsc": "tsc --build tsconfig.json",
    "build:watch": "onchange 'src/**/*.ts' -- npm run build",
    "view:coverage": "serve coverage/lcov-report",
    "clean": "rm -rf coverage src/**/*.js src/**/*.map",
    "lint": "eslint '*/**/*.ts' --quiet",
    "lint:fix": "eslint '*/**/*.ts' --quiet --fix",
    "start": "npm run start:web",
    "start:prod": "npm run start:webprod",
    "start:web": "ts-node-dev -r tsconfig-paths/register src/view/server.ts",
    "start:webprod": "NODE_ENV=production node -r ts-node/register view/server.js",
    "start:cli": "ts-node -r tsconfig-paths/register src/index.ts",
    "docker:start": "docker run --name ccf_base -dt --rm -v $(pwd):/cloud-carbon-footprint/server -v $HOME/.aws/credentials:/home/circleci/.aws/credentials -e AWS_PROFILE circleci/node:current bash",
    "docker:setup": "docker exec -w /cloud-carbon-footprint/server -it ccf_base npm ci",
    "docker:test": "docker exec -w /cloud-carbon-footprint/server -it ccf_base npm run test",
    "docker:cli": "docker exec -w /cloud-carbon-footprint/server -e AWS_PROFILE -it ccf_base npm run start:cli -- ",
    "docker:stop": "docker stop ccf_base"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@hawkeyesec/scanner-cli": "^1.8.0",
    "@types/jest": "^26.0.15",
    "@types/jest-when": "^2.7.2",
    "@types/node": "^14.14.2",
    "@types/source-map-support": "^0.5.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "aws-sdk-mock": "^5.1.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-unused-imports": "^1.0.0",
    "jest": "^26.6.1",
    "jest-when": "^2.8.0",
    "lint-staged": "^10.4.2",
    "onchange": "^7.1.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "source-map-support": "^0.5.19",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.2",
    "ts-node-dev": "^1.0.0"
  },
  "dependencies": {
    "@google-cloud/monitoring": "^2.1.2",
    "@types/cli-table": "^0.3.0",
    "@types/express": "^4.17.8",
    "@types/prompts": "^2.0.9",
    "@types/ramda": "github:types/npm-ramda#dist",
    "aws-sdk": "^2.778.0",
    "cli-table": "^0.3.1",
    "commander": "^6.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "googleapis": "^61.0.0",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "ramda": "^0.27.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typed-prompts": "^1.5.0",
    "typescript": "^4.0.3"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "npm run lint",
      "prettier --write --ignore-unknown --config ../.prettierrc.json"
    ]
  },
  "_moduleAliases": {
    "@application": "./application",
    "@domain": "./domain",
    "@services": "./services",
    "@view": "./view"
  }
}
