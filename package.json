{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@changesets/cli": "^2.14.1",
    "@hawkeyesec/scanner-cli": "^1.8.1",
    "concurrently": "^6.0.0",
    "docsify-cli": "^4.4.1",
    "husky": "^5.1.3",
    "lerna": "^3.22.1",
    "marked": ">=2.0.0",
    "sonar-scanner": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./copyright_check.sh && ./branch_warning.sh && yarn hawkeye scan && lerna run precommit --stream"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "clean": "lerna clean --yes",
    "lint": "lerna run lint",
    "start": "concurrently \"yarn start-app\" \"yarn start-api\"",
    "start-app": "yarn workspace @cloud-carbon-footprint/client start",
    "start-api": "yarn workspace @cloud-carbon-footprint/api start",
    "start-cli": "yarn workspace @cloud-carbon-footprint/cli start",
    "sonar:scan": "lerna run sonar:scan --stream",
    "test": "lerna run test",
    "deploy": "cd terraform && ./run.sh apply",
    "docs": "docsify serve --port 3001",
    "release": "changeset version && yarn install"
  }
}
