{
  "name": "root",
  "private": true,
  "devDependencies": {
    "docsify-cli": "^4.4.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./copyright_check.sh && ./branch_warning.sh && $TALISMAN_HOME/talisman_hook_script pre-commit && lerna run precommit --parallel --stream"
    }
  },
  "scripts": {
    "bootstrap": "npm ci && npx lerna bootstrap --ci --nohoist client --nohoist server",
    "clean": "lerna clean --yes",
    "lint": "lerna run lint --parallel",
    "start": "lerna run start --stream",
    "test": "lerna run test --parallel",
    "deploy": "cd terraform && ./run.sh apply",
    "docs": "docsify serve --port 3001"
  },
  "dependencies": {
    "googleapis": "^63.0.0",
    "@types/react-router-dom": "^5.1.6"
  }
}
